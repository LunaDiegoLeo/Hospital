<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="464.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospital.Controller.Paciente.ListarRecetas">
    <children>
        <Label layoutX="40.0" layoutY="40.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;" text="Recetas del paciente" />

        <Button fx:id="regresarBtn" layoutX="225.0" layoutY="388.0" onAction="#regresar" prefHeight="37.0" prefWidth="150.0" styleClass="red-button" text="Regresar" />

        <ScrollPane layoutX="40.0" layoutY="95.0" prefHeight="255.0" prefWidth="544.0">
            <content>
                <AnchorPane prefHeight="263.0" prefWidth="544.0">
                    <TableView fx:id="tablaRecetas" prefHeight="263.0" prefWidth="544.0">
                        <columns>
                            <TableColumn fx:id="colDoctor" prefWidth="100" text="Doctor" />
                            <TableColumn fx:id="colMedicamento" prefWidth="150" text="Medicamento" />
                            <TableColumn fx:id="colDosis" prefWidth="150" text="Dosis" />
                            <TableColumn fx:id="colFecha" prefWidth="70" text="Fecha" />
                            <TableColumn fx:id="colHora" prefWidth="70" text="Hora" />
                        </columns>
                    </TableView>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
    <stylesheets>
        <URL value="@../../css/admin-style.css" />
        <URL value="@../../css/tablas.css" />
    </stylesheets>
</AnchorPane>
