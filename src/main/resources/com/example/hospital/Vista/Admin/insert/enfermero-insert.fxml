<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="750.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospital.Controller.Admin.EnfermeroController">
    <children>
        <Label layoutX="26.0" layoutY="28.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;" text="Agregar Enfermero" />

        <Label layoutX="26.0" layoutY="80.0" text="Nombre">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="nombre" layoutX="26.0" layoutY="110.0" prefWidth="250.0" stylesheets="@../../../css/textff.css" />

        <Label layoutX="300.0" layoutY="80.0" text="Telefono" visible="false">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="telefono" layoutX="300.0" layoutY="110.0" prefWidth="200.0" stylesheets="@../../../css/textff.css" visible="false" />

        <Label layoutX="26.0" layoutY="150.0" text="CURP">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="curp" layoutX="26.0" layoutY="180.0" prefWidth="250.0" stylesheets="@../../../css/textff.css" />

        <Label layoutX="300.0" layoutY="150.0" text="Cédula">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="cedula" layoutX="300.0" layoutY="180.0" prefWidth="200.0" stylesheets="@../../../css/textff.css" />

        <Label layoutX="26.0" layoutY="220.0" text="RFC">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="rfc" layoutX="26.0" layoutY="250.0" prefWidth="250.0" stylesheets="@../../../css/textff.css" />

        <Label layoutX="300.0" layoutY="220.0" text="Años Experiencia" visible="false">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="aniosExp" layoutX="300.0" layoutY="250.0" prefWidth="100.0" stylesheets="@../../../css/textff.css" visible="false" />

        <Label layoutX="26.0" layoutY="290.0" text="Sueldo por día">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <TextField fx:id="sueldoPorDia" layoutX="26.0" layoutY="320.0" prefWidth="150.0" stylesheets="@../../../css/textff.css" />

        <Label layoutX="300.0" layoutY="290.0" text="Especialidad" visible="false">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <SplitMenuButton fx:id="especialidad" layoutX="300.0" layoutY="320.0" prefWidth="200.0" text="Selecciona" visible="false" />

        <Label layoutX="26.0" layoutY="360.0" text="Departamento">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <SplitMenuButton fx:id="departamento" layoutX="26.0" layoutY="390.0" prefWidth="250.0" text="Selecciona" />

        <Label layoutX="300.0" layoutY="360.0" text="Turno">
            <font>
                <Font name="Berlin Sans FB Bold" size="15.0" />
            </font>
        </Label>
        <SplitMenuButton fx:id="turno" layoutX="300.0" layoutY="390.0" prefWidth="200.0" text="Selecciona" />

        <Button fx:id="agre" layoutX="26.0" layoutY="500.0" mnemonicParsing="false" onAction="#agregar" prefHeight="36.0" prefWidth="132.0" styleClass="blue-button" text="Agregar" />
        <Button fx:id="reg" layoutX="200.0" layoutY="500.0" mnemonicParsing="false" onAction="#regresar" prefHeight="36.0" prefWidth="132.0" styleClass="red-button" text="Regresar" />

    </children>
    <stylesheets>
        <URL value="@../../../css/admin-style.css" />
    </stylesheets>
</AnchorPane>
