      <Button fx:id="admin" onAction="#irAdmin" prefWidth="200" styleClass="blue-button" text="Administrador" />
        <Button fx:id="pac" onAction="#irPaciente" prefWidth="200" styleClass="blue-button" text="Paciente" />
        <Button prefWidth="200" styleClass="blue-button" text="Doctor" />
        <Button prefWidth="200" styleClass="blue-button" text="Enfermero" />
      <Button mnemonicParsing="false" prefHeight="37.0" prefWidth="200.0" styleClass="blue-button" text="Compañia" />
      <Button prefWidth="200.0" styleClass="blue-button" text="Estudios de laboratorio" />
      <Button mnemonicParsing="false" prefHeight="37.0" prefWidth="200.0" styleClass="blue-button" text="Laboratorio" />
    </VBox>
