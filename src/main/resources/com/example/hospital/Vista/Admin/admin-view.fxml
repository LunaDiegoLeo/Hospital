         <Button prefWidth="200" styleClass="blue-button" text="Mediamentos" />
         <Button prefWidth="200.0" styleClass="blue-button" text="Presentacion" />
      </children>
   </VBox>
   <VBox layoutX="200.0" layoutY="525.0" prefHeight="68.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="202.0" styleClass="red-button" text="Cerrar sesión" />
      </children>
   </VBox>

    <!-- Estilos inline -->
    <stylesheets>
        <URL value="@../../css/admin-style.css" />
    </stylesheets>
</AnchorPane>
