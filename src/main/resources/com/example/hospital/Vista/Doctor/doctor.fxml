<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="495.0" prefWidth="600.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hospital.Controller.Doctor.Doctor">

    <!-- Título superior -->
    <Label layoutX="30" layoutY="30" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1E3A8A;" text="Panel del doctor" />

    <!-- Área central de botones -->
    <VBox layoutX="200.0" layoutY="128.0" spacing="20">
        <Button fx:id="admin" onAction="#irCitas" prefWidth="200" styleClass="blue-button" text="Proximas citas" />
        <Button fx:id="pac" onAction="#recetas" prefWidth="200" styleClass="blue-button" text="Recetar medicamento" visible="false" />
        <Button fx:id="doc" onAction="#estudios" prefWidth="200" styleClass="blue-button" text="Hacer estudios" visible="false" />
        <Button fx:id="enfe" onAction="#intervenciones" prefWidth="200" styleClass="blue-button" text="Hacer una intervención" visible="false" />
    </VBox>
    <VBox layoutX="200.0" layoutY="413.0" prefHeight="68.0" prefWidth="200.0">
        <children>
            <Button fx:id="cerrar" mnemonicParsing="false" onAction="#cerrar" prefHeight="25.0" prefWidth="202.0" styleClass="red-button" text="Cerrar sesión" />
        </children>
    </VBox>
    <Label layoutX="30.0" layoutY="6.0" prefHeight="17.0" prefWidth="82.0" text="Bienvenido: ">
        <font>
            <Font name="Arial" size="13.0" />
        </font>
    </Label>
    <Label fx:id="usua" layoutX="118.0" layoutY="7.0" text="     ">
        <font>
            <Font name="Arial Bold" size="13.0" />
        </font>
    </Label>
   <Label fx:id="label" layoutX="30.0" layoutY="72.0" prefHeight="17.0" prefWidth="442.0" text="No esta con ningún paciente" />
   <Button fx:id="cerrar1" layoutX="428.0" layoutY="413.0" mnemonicParsing="false" onAction="#cambiar" prefHeight="37.0" prefWidth="158.0" styleClass="green-button" text="Cambiar Contraseña" />

    <!-- Estilos inline -->
    <stylesheets>
        <URL value="@../../css/admin-style.css" />
    </stylesheets>
</AnchorPane>
